<%
    page_header = I18n.t(
        :"login_signup_form.check_your_updated_email"
    )

    current_step = I18n.t(
        :"login_signup_form.step_counter",
        current_step: 2,
        total_steps: @total_steps
    )

    form_description = I18n.t(
        :"login_signup_form.educator_email_verification_form_decription",
        email: @email,
        edit_your_email: link_to(
            I18n.t(:"login_signup_form.edit_your_email"), educator_change_signup_email_form_path
        )
    ).html_safe

    edit_it_here_link = link_to(
        I18n.t(:"login_signup_form.edit_it_here"), educator_change_signup_email_form_path
    )

    help_message = I18n.t(
        :"login_signup_form.educator_email_verification_help_msg",
        edit_it_here: edit_it_here_link,
        contact_us_link: contact_us_link
    ).html_safe
%>

<%=
  render(
    partial: 'signup/email_verification_form_template',
    locals: {
      header: page_header,
      form_description: form_description,
      current_step: current_step,
      help_message: help_message,
      submit_to_path: educator_verify_pin_path
    }
  )
%>
