<% show_user = true if show_user.nil? %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Time</th>
      <% if show_user %>
      <th>User</th>
      <% end %>
      <th>App</th>
      <th>IP</th>
      <th>Type</th>
      <th>Data</th>
    </tr>
  </thead>

  <tbody>
    <% security_log.each do |log_entry| %>
    <%= render partial: "shared/security_log_entry", locals: { security_log_entry: log_entry,
                                                               show_user: show_user } %>
    <% end %>
  </tbody>
</table>
