<div class="content control-group">
  <div id="password-field-container">
    <%
        @min_passw_length ||= Identity::MIN_PASSWORD_LENGTH
    %>
    <div class="input-with-tooltip" data-bind="passwordWithToolTip: <%= @min_passw_length %>">
      <%= label_tag(:password, I18n.t(:"login_signup_form.password_label"), class: 'field-label') %>
      <span id="password-show-hide-button">
          <span class="toggle-show-hide show">
            <%= I18n.t(:"login_signup_form.show_password_btn")  %>
          </span>
          <span class="toggle-show-hide hide">
            <%= I18n.t(:"login_signup_form.hide_password_btn")  %>
          </span>
      </span>
      <%=
        fh.text_field(
          name: :password,
          type: :password,
          placeholder: I18n.t(:"login_signup_form.password_label")
        )
      %>
      <div class="tooltip">
          <h4><%= I18n.t(:"login_signup_form.password_requirements") %></h4>
          <div>
              <i id="password-requirements-checkmark" class="fa fa-check-circle">
              </i>
              <%= I18n.t(:"login_signup_form.min_characters", number: @min_passw_length) %>
          </div>
      </div>
    </div>
  </div>
</div>
