<div id="login-signup-form">
    <div class="content">
        <%= render partial: 'tab_group' , locals: { active_class: 'signup--active' } %>

        <%= newflow_login_signup_card(
                    classes: "signup-page",
                    header: I18n.t(:"login_signup_form.youre_done", first_name: @first_name),
                    show_exit_icon: true) do %>
            <form action="<%= redirect_back_path %>">
                <div class="content control-group info-message">
                    <%= I18n.t(:"login_signup_form.youre_done_description",
                                    email_address: @email_address).html_safe
                    %>
                    <br />
                    <br />
                    <%= image_tag('highlighting_and_note_taking.png', style: 'width: inherit;' ) %>

                    <%= button_tag('Finish', :data => {:'ga-category' => 'Account Creation', 'ga-action': 'Click', 'ga-label': '5-Finish'}) %>
                </div>
            </form>
        <% end  %>
    </div>
</div>
