<div id="login-signup-form">
    <div class="content">
        <%= render partial: 'tab_group', locals: { active_class: 'signup--active'} %>

        <%= newflow_login_signup_card(
                    classes: "signup-page",
                    header: header,
                    current_step: current_step) do %>
            <% lev_form_for :confirm, url: newflow_verify_pin_path do |form| %>
                <%
                    form_helper = NewflowFormHelper::Newflow.new(
                        f: form,
                        context: self,
                        errors: @handler_result&.errors
                    )
                %>

                <div class="content info-message">
                    <%= form_decription %>
                </div>

                <div class="content control-group">
                    <%=
                        label_tag(
                            :pin,
                            I18n.t(:"login_signup_form.pin_label"),
                            class: 'field-label required'
                        )
                    %>
                    <%=
                        form_helper.text_field(
                            name: :pin,
                            placeholder: I18n.t(:"login_signup_form.pin_placeholder"),
                            autofocus: true
                        )
                    %>
                </div>

                <div class="content">
                    <%= help_message %>
                </div>

                <br />

                <div class="content">
                    <%=
                        form.submit(
                            I18n.t(:"login_signup_form.confirm_my_account_button"),
                            disable_with: I18n.t(:"login_signup_form.confirm_my_account_button"),
                            class: 'primary',
                            data: {
                                'ga-category': 'Account Creation',
                                'ga-action': 'Click',
                                'ga-label': '4A-Confirm My Account'
                            }
                        )
                    %>
                </div>

            <% end %>
        <% end %>
    </div>
</div>
