<%
  page_header = I18n.t(
    :"login_signup_form.confirmation_page_header",
    first_name: @first_name
  )

  form_decription = I18n.t(
    :"login_signup_form.#{@role_based_form_decription_name}",
    email: @email,
    edit_your_email: link_to(
        I18n.t(:"login_signup_form.edit_your_email"),
        change_signup_email_form_path
    )
  ).html_safe

  help_message = I18n.t(
    :"login_signup_form.email_verification_help_msg_student",
    sign_up_with_different_email_link: link_to(
      I18n.t(:"login_signup_form.sign_up_with_different_email"),
      change_signup_email_form_path
    )
  ).html_safe
%>

<%=
  render(
    partial: 'email_verification_form_template',
    locals: {
      header: page_header,
      current_step: @current_step,
      form_decription: form_decription,
      help_message: help_message
    }
  )
%>
