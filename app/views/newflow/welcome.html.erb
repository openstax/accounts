<div id="login-signup-form">
    <div class="content">
        <%= render partial: 'tab_group', locals: { active_class: 'signup--active'} %>

        <%= newflow_login_signup_card(
                    classes: "welcome-page",
                    header: (I18n.t('signinup_form.welcome_page_header')),
                    current_step: I18n.t('signinup_form.step_counter', current_step: 1, total_steps: 3),
                    banners: @banners) do %>
            <% lev_form_for :login, url: newflow_callback_path(:loginstrategy) do |f| %>
                <% fh = FormHelper::NewFlow.new(f: f,
                                            context: self,
                                            errors: @handler_result.try(:errors),
                                            error_field_classes: "alert alert-danger") %>
                <div class="content">
                    <div class="join-as">

                        <div>
                            <%= link_to newflow_signup_path do%>
                                <div class="join-as__role student">
                                    <span><%= I18n.t('signinup_form.student') %></span>
                                    <%= image_tag('student-icon.svg') %>
                                </div>
                            <% end %>

                            <div class="join-as__description"><%= I18n.t('signinup_form.join_as_student_description').html_safe %></div>
                        </div>

                        <div>
                            <%= link_to newflow_signup_path  do%>
                                <div class="join-as__role educator">
                                    <span><%= I18n.t('signinup_form.educator') %></span>
                                    <%= image_tag('educator-icon.svg') %>
                                </div>
                            <% end %>

                            <div class="join-as__description"><%= I18n.t('signinup_form.join_as_educator_description').html_safe %></div>
                        </div>

                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
