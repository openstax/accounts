<div id="signinup-form">
    <div class="content">
        <%= render partial: 'tab_group', locals: { active_class: 'signup--active'} %>

        <form>
                <div class="step-counter">
                    <div>
                        <span>Step 2 of 3</span>
                    </div>
                </div>

                <header>Set up your account</header>

                <div class="content role-section">
                    <div>
                        <a href="/newflow/welcome" class="back-arrow"><i class="fa fa-arrow-left"></i></a>
                        <input type="button" value="Student" class="role-button">
                    </div>
                </div>

                <div class="content social-section">
                    <div>Sign up with:</div>

                    <div class="social-buttons">

                        <div class="fb-share-button">
                            <a class="facebook btn" href="#">
                                <i class="social-icon fa fa-facebook"></i>
                                <span>Facebook</span>
                            </a>
                        </div>

                        <div class="google-share-button">
                            <a href="#" class="google btn">
                                <i class="social-icon fa fa-google"></i>
                                <span>Google</span>
                            </a>
                        </div>

                    </div>
                </div>

                <div class="divider">OR SIGN UP BELOW</div>

                <div class="content control-group">
                    <label class="field-label">First name *</label>
                    <input type="text" name="first_name"
                                placeholder="First name" class="delay-validation" required>
                    <!-- <div class="invalid-message">You surely have a first name</div> -->
                </div>

                <div class="content control-group">
                    <label class="field-label">Last name *</label>
                    <input type="text" name="last_name"
                                placeholder="Last name" class="delay-validation" required>
                    <!-- <div class="invalid-message">You surely have a last name</div> -->
                </div>

                <div class="content control-group">
                    <label class="field-label">Email *</label>
                    <input type="text" name="email"
                                placeholder="me@myemail.com" class="delay-validation" required>
                    <!-- <div class="invalid-message">Your email address or login with social</div> -->
                </div>

                <div class="content control-group">
                    <label class="field-label">Password *</label>
                    <input type="password" name="password"
                                placeholder="Password" class="delay-validation" required>
                    <!-- <div class="invalid-message">A secure password</div> -->
                </div>

                <div class="content control-group checkboxes-section">
                    <div>
                        <input type="checkbox" name="newsletter" checked>
                        <span>Send me the OpenStax newsletter</span>
                        <br>
                    </div>

                    <div class="terms">
                        <input type="checkbox" name="terms">
                        <span>I agree to the Terms of Use and Privacy Policy</span>
                    </div>
                </div>

                <div class="content">
                    <input type="submit" value="Continue" class="primary">
                </div>
        </form>
    </div>
</div>
