<%
    page_header = I18n.t(
        :"login_signup_form.check_your_updated_email"
    )

    current_step = I18n.t(
        :"login_signup_form.step_counter",
        current_step: 2,
        total_steps: 2
    )

    form_description = I18n.t(
        :"login_signup_form.student_email_verification_form_decription",
        email: @email,
        edit_your_email: link_to(
            I18n.t(:"login_signup_form.edit_your_email"), student_change_signup_email_form_path
        )
    ).html_safe

    help_message = I18n.t(
        :"login_signup_form.havent_received_message",
        contact_us: contact_us_link
    ).html_safe
%>

<%=
  render(
    partial: 'newflow/signup/email_verification_form_template',
    locals: {
      header: page_header,
      form_description: form_description,
      current_step: current_step,
      help_message: help_message,
      submit_to_path: student_verify_pin_path
    }
  )
%>
