<%= form_for(@application,
    as: :application, url: :oauth_applications,
    html: {class: 'form-horizontal', role: 'form'}) do |f| %>

  <% if @application.errors.any? %>
    <div class="alert alert-danger" data-alert><p>Whoops! Check your form for possible errors</p></div>
  <% end %>

  <%= content_tag :div, class: "form-group#{' has-error' if @application.errors[:name].present?}" do %>
    <%= f.label :name, class: 'col-sm-2 control-label', for: 'application_name' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
      <%= doorkeeper_errors_for @application, :name %>
    </div>
  <% end %>

  <%= content_tag :div, class: "form-group#{' has-error' if @application.errors[:redirect_uri].present?}" do %>
    <%= f.label :redirect_uri, 'Callback urls', class: 'col-sm-2 control-label', for: 'application_redirect_uri' %>
    <div class="col-sm-10">
      <%= f.text_area :redirect_uri, class: 'form-control', rows: 5 %>
      <%= doorkeeper_errors_for @application, :redirect_uri %>
      <span class="help-block">
        Use one line per URI
      </span>
      <% if Doorkeeper.configuration.native_redirect_uri %>
        <span class="help-block">
          Use <code><%= Doorkeeper.configuration.native_redirect_uri %></code> for local tests
        </span>
      <% end %>
    </div>
  <% end %>

  <%= content_tag :div, class: "form-group#{' has-error' if @application.errors[:email_subject_prefix].present?}" do %>
    <%= f.label :email_subject_prefix, class: 'col-sm-2 control-label', for: 'application_email_subject_prefix' %>
    <div class="col-sm-10">
      <%= f.text_field :email_subject_prefix, class: 'form-control' %>
      <%= doorkeeper_errors_for @application, :email_subject_prefix %>
    </div>
  <% end %>

  <% if @user.is_administrator? %>
    <%= content_tag :div, class: "form-group#{' has-error' if @application.errors[:email_from_address].present?}" do %>
      <%= f.label :email_from_address, class: 'col-sm-2 control-label', for: 'application_email_from_address' %>
      <div class="col-sm-10">
        <%= f.text_field :email_from_address, class: 'form-control' %>
        <%= doorkeeper_errors_for @application, :email_from_address %>
      </div>
    <% end %>

    <%= content_tag :div, class: "form-group#{' has-error' if @application.errors[:trusted].present?}" do %>
      <%= f.label :trusted?, class: 'col-sm-2 control-label', for: 'application_trusted' %>
      <div class="col-sm-10">
        <%= f.check_box :trusted %>
        <%= doorkeeper_errors_for @application, :trusted %>
      </div>
    <% end %>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Submit', class: "btn btn-primary" %>
      <%= link_to "Cancel", oauth_applications_path, :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
