        edit_your_email: link_to(I18n.t(:"login_signup_form.edit_your_email"), change_signup_email_form_path)).html_safe,
      current_step:     I18n.t(
        :"login_signup_form.step_counter",
        current_step: 2,
        total_steps:  @total_steps
      ),
      help_message:     I18n.t(
        :"login_signup_form.didnt_receive_email",
        sign_up_with_different_email_link: link_to(
                                             I18n.t(:"login_signup_form.sign_up_with_different_email"), change_signup_email_form_path
