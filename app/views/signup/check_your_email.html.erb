<div id="login-signup-form">
    <div class="content">
        <%= render partial: 'shared/tab_group' , locals: { active_class: 'login--active' } %>

        <%= login_signup_card(
                    classes: "login-page",
                    header: I18n.t(:"login_signup_form.check_your_email",
                        first_name: @first_name),
                    current_step: I18n.t(
                      :'login_signup_form.step_counter',
                      current_step: 2,
                      total_steps:  @total_steps)) do %>
            <form>
                <div class="content control-group info-message">
                    <%= I18n.t(:"login_signup_form.check_your_email_description",
                                    email: @email).html_safe
                    %>
                </div>
            </form>
        <% end  %>
    </div>
</div>
