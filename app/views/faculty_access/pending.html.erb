<%= ox_card(heading: (t :'.page_heading')) do %>

  <p><%= t :'.message' %></p>

  <div class="checkbox">
    <label>
      <input type="checkbox"><%= t :".check_box" %>
    </label>
  </div>

  <section class="footer">
    <%= button_to (t :".ok"), {action: :pending}, {class: 'primary'} %>
  </section>

<% end %>
