<h4>Create a new user</h4>

<div style="width: 500px">
  <%= lev_form_for :create, url: dev_users_path, remote: true, 
                   html: {id: 'create-user-form', class: 'form-horizontal'} do |f| %>

    <div class='form-group'>
      <label class='col-sm-3 control-label'>First name</label>
      <div class='col-sm-9'>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <label class='col-sm-3 control-label'>Last name</label>
      <div class='col-sm-9'>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <label class='col-sm-3 control-label'>Username</label>
      <div class='col-sm-9'>
        <%= f.text_field :username, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
        <label class='col-sm-3 control-label'>Admin?</label>
        <div class=' col-sm-9'>

            <%= f.check_box :is_admin %>

        </div>
    </div>
    <div class='form-group'>
      <div class='col-sm-offset-3 col-sm-9'>
        <%= f.submit 'Register' %>
      </div>
    </div>

  <% end %>
</div>

<h4>Generate new users</h4>

<%= lev_form_for :generate, url: generate_dev_users_path, remote: true,
                 html: {id: 'generate-users-form', class: 'form-inline'} do |f| %>
                 
  Generate <%= f.text_field :count, style: 'width:50px' %> user(s)
  <%= f.submit 'Do it now!' %>
<% end %>
