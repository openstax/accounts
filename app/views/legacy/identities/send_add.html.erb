<%= ox_card(heading: (t :".page_heading")) do %>

  <% addresses = @handler_result.outputs
                                .email_addresses
                                .map{|em| "<b>#{em}</b>"} %>
  <p><%= (t :".we_sent_email",
            emails: (I18n.enumerate :all, addresses, expand: false),
            count: addresses.length).html_safe %></p>

  <p><%= t :".close_this_window" %></p>

<% end %>
